<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">

    <!-- Fill alpha pulse: 0 -> 1 -> 0 -->
    <target android:name="heart_fill">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:duration="800"
                android:valueFrom="0"
                android:valueTo="1"
                android:repeatMode="reverse"
                android:interpolator="@android:interpolator/accelerate_decelerate" />
        </aapt:attr>
    </target>

    <!-- Optional: Scale pop to make it look alive -->
    <target android:name="heart_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="800"
                    android:valueFrom="1.0"
                    android:valueTo="1.12"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="800"
                    android:valueFrom="1.0"
                    android:valueTo="1.12"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
            </set>
        </aapt:attr>
    </target>

    <!-- Vector drawable -->
    <aapt:attr name="android:drawable">
        <vector
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">

            <group
                android:name="heart_group"
                android:pivotX="12"
                android:pivotY="12">

                <!-- Border Heart -->
                <path
                    android:name="heart_stroke"
                    android:pathData="M12 21.35
                        l-1.45-1.32
                        C5.4 15.36 2 12.28 2 8.5
                        C2 6.0 4 4 6.5 4
                        c1.74 0 3.41 1.01 4.13 2.44
                        C11.09 5.01 12.76 4 14.5 4
                        C17 4 19 6 19 8.5
                        c0 3.78-3.4 6.86-8.55 11.54
                        L12 21.35z"
                    android:strokeColor="#FF3B30"
                    android:strokeWidth="2"
                    android:fillColor="@android:color/transparent"
                    android:strokeAlpha="1" />

                <!-- Fill Heart -->
                <path
                    android:name="heart_fill"
                    android:pathData="M12 21.35
                        l-1.45-1.32
                        C5.4 15.36 2 12.28 2 8.5
                        C2 6.0 4 4 6.5 4
                        c1.74 0 3.41 1.01 4.13 2.44
                        C11.09 5.01 12.76 4 14.5 4
                        C17 4 19 6 19 8.5
                        c0 3.78-3.4 6.86-8.55 11.54
                        L12 21.35z"
                    android:fillColor="#FF3B30"
                    android:fillAlpha="0" />
            </group>
        </vector>
    </aapt:attr>
</animated-vector>
